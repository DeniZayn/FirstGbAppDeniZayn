<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F8FB"
    android:orientation="vertical">


    <EditText
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/festive_regular"
        android:textAlignment="textEnd"
        android:textColor="#997424"
        android:textSize="55sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result_of_calculation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/festive_regular"
        android:textAlignment="textEnd"
        android:textColor="#FFDC90"
        android:textSize="55sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculation" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAC"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#53A3E1"
        android:text="@string/resclear"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_of_calculation" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDel"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#53A3E1"
        android:text="@string/resbacksp"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btnAC"
        app:layout_constraintTop_toTopOf="@+id/btnAC" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn7"
        android:text="@string/ressev"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn8"
        android:text="@string/reseight"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn9"
        android:text="@string/resnine"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDivision"
        android:text="@string/resdiv"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn4"
        android:text="@string/resfour"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn5"
        android:text="5"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn6"
        android:text="@string/buttonressix"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        style="@style/btn0_9"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMultiplication"
        android:text="@string/buttonresmult"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnDivision"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn1"
        android:text="@string/buttonresone"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn2"
        android:text="@string/buttonrestwo"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn3"
        android:text="@string/buttonresthree"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubtraction"
        android:text="@string/buttonresminus"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplication"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDot"
        android:text="@string/buttonresdot"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn0"
        android:text="@string/_buttreszero"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btnDot"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEqually"
        android:text="@string/buttonresequal"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSummary"
        android:text="@string/buttonressumm"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btnEqually"
        app:layout_constraintTop_toBottomOf="@+id/btnSubtraction"
        style="@style/btn0_9"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_height="wrap_content"
        android:layout_width="400dp"
        android:text="SETTINGS"
        android:textSize="22sp"
        android:textStyle="italic"
        android:textColor="@color/cardview_dark_background"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEqually"
        />


    <TextView
        android:id="@+id/calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/festive_regular"
        android:text="@string/test_resource"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        style="@style/MyStyle"/>


</android.support.constraint.ConstraintLayout>





