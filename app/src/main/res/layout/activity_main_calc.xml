<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F8FB"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

 <EditText
     android:id="@+id/calculation"
     android:layout_width="match_parent"
     android:layout_height="90dp"
     android:layout_marginTop="10dp"
     android:textAlignment="textEnd"
     android:textColor="#997424"
     android:textSize="55dp"
     android:textStyle="normal"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintRight_toRightOf="parent"  />

    <EditText
        android:id="@+id/result_of_calculation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:textAlignment="textEnd"
        android:textColor="#FFDC90"
        android:textSize="55dp"
        android:textStyle="normal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculation"  />

    <Button
        android:id="@+id/btnAC"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="CLEAR"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_of_calculation"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="BACKSPACE"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btnAC"
        app:layout_constraintTop_toTopOf="@+id/btnAC"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="7"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="8"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="9"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btnDivision"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="/"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/btn9"
        app:layout_constraintTop_toBottomOf="@+id/btnDel"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="4"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="5"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="6"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btnMultiplication"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="*"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@+id/btnDivision"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="1"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="2"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn5"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="3"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn6"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btnSubtraction"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="-"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplication"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btnDot"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="."
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="0"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btnDot"
        app:layout_constraintTop_toBottomOf="@+id/btn2"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btnEqually"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="="
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn3"
        android:layout_marginLeft="5dp" />
    <Button
        android:id="@+id/btnSummary"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:backgroundTint="#53A3E1"
        android:textColor="#FFFFFF"
        android:text="+"
        android:textStyle="bold"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/btnEqually"
        app:layout_constraintTop_toBottomOf="@+id/btnSubtraction"
        android:layout_marginLeft="5dp" />



</android.support.constraint.ConstraintLayout>





